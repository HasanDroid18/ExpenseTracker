<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:layoutDirection="locale"
    tools:context=".AppScreens.Goals.GoalFragment">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_monthly_goal"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Refresh Button -->
            <ImageView
                android:id="@+id/btnRefresh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/settings_24px"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_refresh"
                app:tint="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvTitle"
                app:layout_constraintBottom_toBottomOf="@id/tvTitle" />

            <!-- Loading Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBarLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <!-- ============================================ -->
            <!-- NO GOAL SET VIEW -->
            <!-- ============================================ -->
            <LinearLayout
                android:id="@+id/layoutNoGoal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progressBarLoading">

                <!-- Empty State Icon -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/outline_add_24"
                    android:alpha="0.3"
                    app:tint="@color/textLight"
                    android:contentDescription="@string/content_desc_no_goal" />

                <!-- Empty State Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/title_no_goal_set"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textColor="@color/text"
                    android:textStyle="bold" />

                <!-- Empty State Message -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/message_set_monthly_goal"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/textLight"
                    android:textAlignment="center"
                    android:gravity="center" />

                <!-- Set Goal Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSetGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/action_set_goal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/outline_add_24"
                    app:iconTint="@color/white" />
            </LinearLayout>

            <!-- ============================================ -->
            <!-- GOAL SET VIEW -->
            <!-- ============================================ -->
            <LinearLayout
                android:id="@+id/layoutGoalSet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progressBarLoading"
                tools:visibility="visible">

                <!-- Goal Amount Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/primary"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_monthly_goal"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/white"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/tvGoalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-black"
                            tools:text="$1,000" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Progress Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Progress Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_current_progress"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/text"
                            android:textStyle="bold" />

                        <!-- Progress Percentage -->
                        <TextView
                            android:id="@+id/tvProgressPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            tools:text="45%" />

                        <!-- Progress Bar -->
                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginTop="16dp"
                            android:max="100"
                            android:progressTint="@android:color/holo_green_dark"
                            tools:progress="45" />

                        <!-- Current Expenses -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/label_spent_this_month"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:textColor="@color/textLight" />

                            <TextView
                                android:id="@+id/tvCurrentExpenses"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                tools:text="$450.00" />
                        </LinearLayout>

                        <!-- Warning Message -->
                        <TextView
                            android:id="@+id/tvWarning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:padding="12dp"
                            android:background="@drawable/btn_bg"
                            android:text="@string/warning_close_to_limit"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:visibility="gone"
                            tools:visibility="visible" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Edit Goal Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditGoal"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/action_edit_goal"
                        app:strokeColor="@color/primary"
                        app:icon="@drawable/edit_square"
                        app:iconTint="@color/primary" />

                    <!-- Delete Goal Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDeleteGoal"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/action_delete_goal"
                        app:strokeColor="@android:color/holo_red_dark"
                        app:icon="@drawable/delete"
                        app:iconTint="@android:color/holo_red_dark" />
                </LinearLayout>

                <!-- Info Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/border"
                    app:cardBackgroundColor="@color/background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Info Icon and Title -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/info_24px"
                                app:tint="@color/primary"
                                android:contentDescription="@string/content_desc_info" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@string/title_about_notifications"
                                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                                android:textColor="@color/text"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Info Text -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/message_notification_milestones"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/textLight" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

